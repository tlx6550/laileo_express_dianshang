extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 商品名称
                        th 商品价格
                        th 录入时间2
                        th 更新时间
                        th 查看
                        th 更新
                        th 删除
                tbody
                    each item in commodities
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td #{item.price}
                            td #{moment(item.meta.createAt).format('MM/DD/YYYY HH:MM:SS')}
                            td #{moment(item.meta.updateAt).format('MM/DD/YYYY HH:MM:SS')}
                            td: a(target="_blank",href="/commodity/#{item._id}") 查看
                            td: a(target="_blank",href="/admin/commodity/update/#{item._id}") 修改
                            td
                                button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
        script(src="/javascripts/admin.js")